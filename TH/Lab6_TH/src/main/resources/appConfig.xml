<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="product1" class="com.iiex.lab6_th.Model.Product">
        <property name="id" value="1" />
        <property name="name" value="Product 1" />
        <property name="price" value="10.99" />
        <property name="description" value="This is product 1" />
    </bean>

    <bean id="product2" class="com.iiex.lab6_th.Model.Product">
        <constructor-arg value="2" />
        <constructor-arg value="Product 2" />
        <constructor-arg value="19.99" />
        <constructor-arg value="This is product 2" />
    </bean>

    <bean id="product3" class="com.iiex.lab6_th.Model.Product" scope="singleton">
        <property name="id" value="3" />
        <property name="name" value="Product 3" />
        <property name="price" value="15.99" />
        <property name="description" value="This is product 3" />
    </bean>

</beans>